<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rfstudio.homecontroller.CardDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/cd_image"
            android:transitionName="cd_image_cov"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/cd_image"
            android:background="@android:color/holo_red_light"
            android:id="@+id/cd_title"
            android:text="SAMPLE"
            android:fontFamily="sans-serif-thin"
            android:textSize="48dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cd_details"
            android:layout_below="@+id/cd_title"
            android:textSize="22sp"
            android:text=""
            android:layout_margin="16dp"
            android:lineSpacingExtra="10dp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_height="fill_parent"
            android:layout_width="match_parent"
            android:id="@+id/cdRecyclerView"
            android:layout_below="@id/cd_title"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <fragment
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.rfstudio.homecontroller.NavigationDrawer"
        android:id="@+id/navDrawer"
        tools:layout="@layout/fragment_navigation_drawer"
        android:padding="2dp"
        android:elevation="2dp"
        android:clipToPadding="false"/>

</android.support.v4.widget.DrawerLayout>